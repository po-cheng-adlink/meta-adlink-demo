[Unit]
Description=Docker Compose Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
WorkingDirectory=/etc/
ExecStart=/usr/bin/env /usr/bin/docker-compose -f @DOCKER_COMPOSE_FILE@ up -d @DOCKER_RUN_IMAGES@
ExecStop=/usr/bin/env /usr/bin/docker-compose -f @DOCKER_COMPOSE_FILE@ stop @DOCKER_RUN_IMAGES@
RemainAfterExit=yes
PermissionsStartOnly=true
ExecStartPre=-/bin/sh -c '/home/adlink/udev_reload.sh'

[Install]
WantedBy=multi-user.target

